# Week-12: Implement a simple chatbot for answering python questions for text file

app.py

from flask import Flask, render_template, request

app = Flask(__name__)

# Load questions from text file
def load_qna():
    qna = {}
    with open('python_questions.txt') as f:
        for line in f:
            q, a = line.strip().split('|||')
            qna[q.strip()] = a.strip()
    return qna

questions = load_qna()

@app.route('/')
def home():
    return render_template('chatbot.html')

@app.route('/ask', methods=['POST'])
def ask():
    user_q = request.form['user_question']
    answer = questions.get(user_q, "Sorry, I don't know the answer to that question.")
    return render_template('chatbot.html', user_question=user_q, answer=answer)

if __name__ == '__main__':
    app.run()


chatbot.html

<!DOCTYPE html>
<html>
<head>
  <title>Python Chatbot</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 style="color: black;">Python Chatbot</h1>
    <form method="POST" action="/ask">
      <p style="font-weight: bold;">Ask a Python question:</p>  
      <input type="text" class="form-control mb-3" name="user_question" required>
      <button style="color: black;" >Submit</button>
    </form>
    <br>
    {% if user_question %}
      <div>
        <h3>Your Question:</h3>
        <p>{{ user_question }}</p>
        <h3>Answer:</h3>
        <p>{{ answer }}</p>
      </div>
    {% endif %}
  </div>
</body>
</html>


