# Week-6: Create a navigation and Routing for Pizza Store App

main.dart

import 'package:flutter/material.dart';
import 'Dashboard.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Pizza Dashboard',
      theme: ThemeData(
        primarySwatch: Colors.deepPurple,
      ),
      debugShowCheckedModeBanner: false,
      home: Dashboard(),
    );
  }
}


TopNavigationBar.dart

import 'package:flutter/material.dart';
class TopNavigationBar extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return DefaultTabController(
      length: 3,
      child: Scaffold(
        appBar: AppBar(
          backgroundColor: Colors.redAccent,
          title: Row(
            mainAxisAlignment: MainAxisAlignment.spaceBetween,
            children: [
              const Text(
                'WOW Pizza',
                style: TextStyle(fontSize: 20),
              ),
              Row(
                children: [
                  Image.asset('Images/twitter.png', height: 30),
                  const SizedBox(width: 10),
                  Image.asset('Images/facebook.png', height: 35),
                ],
              ),
            ],
          ),
          bottom: const TabBar(
            indicatorColor: Colors.white,
            tabs: [
              Tab(
                icon: Icon(Icons.local_pizza),
                text: 'Veg Pizza',
              ),
              Tab(
                icon: Icon(Icons.local_pizza_outlined),
                text: 'Cheese Pizza',
              ),
              Tab(
                icon: Icon(Icons.fastfood),
                text: 'Fries',
              ),
            ],
          ),
        ),
        body: const TabBarView(
          children: [
            PizzaPage(
              imagePath: 'Images/Vpizza.png',
              text: "Hi, I'm Pizza Assistant, what can I help you order?",
            ),
            PizzaPage(
              imagePath: 'Images/cheesepizza.png',
              text: "Hi, I'm Pizza Assistant, what can I help you order?",
            ),
            PizzaPage(
              imagePath: 'Images/Fpizza.png',
              text: "Hi, I'm Pizza Assistant, what can I help you order?",
            ),
          ],
        ),
      ),
    );
  }
}
class PizzaPage extends StatelessWidget {
  final String imagePath;
  final String text;
  const PizzaPage({
    Key? key,
    required this.imagePath,
    required this.text,
  }) : super(key: key);
  @override
  Widget build(BuildContext context) {
    return Center(
      child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Image.asset(
            imagePath,
            width: 300,
            height: 250,
            fit: BoxFit.cover,
          ),
          const SizedBox(height: 20),
          Text(
            text,
            textAlign: TextAlign.center,
            style: const TextStyle(
              fontSize: 22,
              decoration: TextDecoration.none,
              color: Colors.black87,
            ),
          ),
        ],
      ),
    );
  }
}


Dashboard.dart

import 'package:flutter/material.dart';
import 'TopNavigationBar.dart';
class Dashboard extends StatelessWidget {
  const Dashboard({Key? key}) : super(key: key);
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text("Welcome to WOW PIZZA!"),
        centerTitle: true,
        backgroundColor: Colors.deepOrange,
      ),
      body: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Image.asset(
            'Images/meal.jpg',
            width: 350,
            height: 250,
            fit: BoxFit.cover,
          ),
          const SizedBox(height: 20),
          const Text(
            "Wanna Order Something?",
            style: TextStyle(
              fontSize: 24,
              decoration: TextDecoration.none,
              color: Colors.black87,
            ),
            textAlign: TextAlign.center,
          ),
          const SizedBox(height: 20),
          ElevatedButton(
            onPressed: () {
              Navigator.pushReplacement(
                context,
                MaterialPageRoute(builder: (context) => TopNavigationBar()),
              );
            },
            style: ElevatedButton.styleFrom(
              backgroundColor: Colors.amber,
              padding: const EdgeInsets.symmetric(horizontal: 30, vertical: 12),
            ),
            child: const Text(
              'Letâ€™s Go!',
              style: TextStyle(fontSize: 20),
            ),
          ),
        ],
      ),
    );
  }
}


